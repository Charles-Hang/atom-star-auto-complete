{
	"name": "ria-css-autocomplete-vscode",
	"displayName": "ria css autocomplete vscode",
	"description": "ria css autocomplete",
	"version": "0.0.4",
	"engines": {
		"vscode": "^1.42.0"
	},
	"publisher": "tiger-hswx",
	"categories": [
		"Other"
	],
	"icon": "icon.png",
	"activationEvents": [
		"onLanguage:javascript",
		"onLanguage:javascriptreact",
		"onLanguage:typescript",
		"onLanguage:typescriptreact",
		"onLanguage:html",
		"onLanguage:css",
		"onLanguage:scss"
	],
	"contributes": {
		"configuration": {
			"title": "Ria css autocomplete",
			"properties": {
				"riacss.config": {
					"type": "string",
					"default": "**/riacss.config.js",
					"description": "postcss-tiger-ria配置文件的匹配字符串，Glob Patterns格式"
				},
				"riacss.includes": {
					"type": "string",
					"default": "",
					"description": "需要额外加入补全提示的css类名，逗号分隔"
				}
			}
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/lodash": "^4.14.155",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"lodash": "^4.17.15"
	}
}
